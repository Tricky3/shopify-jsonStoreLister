// STORE LOCATOR

.just_the_name, .name_with_link {
    font-family: $bfont;
    padding-bottom: 2px;
}

.name_with_link a {
    border-bottom: 1px solid #999;
    text-decoration: none;
}

#store-locator .mailchimp-embed-form {
    display: none;
}

.page-textile {
    margin: 0 48px;
}

#storelocating h1{
  text-align:center;
  margin:0;
  @include font-size(5.4);
}

#retailers_placeholder {
  padding-left:15%;
  padding-right:5%;
  h2{
    text-transform:uppercase;
  }
  .separator {
    display: inline-block;
    white-space: nowrap;
    vertical-align: top;
  }
  .retailers_info {
    display: inline-block;
    padding: 0 16px 16px 0;
    vertical-align: top;
    width:32%;
  }
}



/*Collapsable Items*/
.collapse-item{ height:0px; position:relative; overflow:hidden; display:block; clear:both; width:100%;}
.collapse-wrap{ display:block; width:100%;}
.collapse-content { font-size: 13px;opacity: 0; padding: 22px 0;}
.open .collapse-content{ opacity:1;}

.anim-height{
  transform-origin: 0, 0;
  -webkit-transform-origin:  0, 0;
  -moz-transform-origin: 0, 0;
  -ms-transform-origin:  0, 0;
  -o-transform-origin:  0, 0;

  transition: height 350ms cubic-bezier(0.260, 0.860, 0.440, 0.985), border 350ms;
  -webkit-transition: height 350ms cubic-bezier(0.260, 0.860, 0.440, 0.985), border 350ms;
  -moz-transition: height 350ms cubic-bezier(0.260, 0.860, 0.440, 0.985), border 350ms; 
  -ms-transition: height 350ms cubic-bezier(0.260, 0.860, 0.440, 0.985), border 350ms; 
  -o-transition: height 350ms cubic-bezier(0.260, 0.860, 0.440, 0.985), border 350ms;
}

.collapse-item.open { height:auto;}